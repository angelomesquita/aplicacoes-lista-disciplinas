<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DisciplinaActivity">

    <ImageView
        android:id="@+id/disciplina_background"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@color/teal_200"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_titulo_disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="false"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/disciplina_background"
        app:layout_constraintEnd_toEndOf="@id/disciplina_background"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintStart_toStartOf="@id/disciplina_background"
        app:layout_constraintTop_toTopOf="@id/disciplina_background"
        app:layout_constraintVertical_bias="0.10"
        tools:text="@sample/disciplinas.json/disciplinas/titulo_disciplina" />

    <TextView
        android:id="@+id/disciplina_carga_horaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="308dp"
        android:layout_marginRight="308dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/disciplina_titulo_disciplina"
        app:layout_constraintTop_toBottomOf="@id/disciplina_titulo_disciplina"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@sample/disciplinas.json/disciplinas/carga_horaria_disciplina" />

    <TextView
        android:id="@+id/disciplina_titulo_ementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ementa"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disciplina_background"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_texto_ementa"
        android:layout_width="332dp"
        android:layout_height="219dp"
        android:layout_marginTop="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin viverra dui cursus, mattis mi at, facilisis lorem. Mauris viverra leo dui, laoreet sagittis urna dapibus ac. Nulla lacinia lacus et tincidunt pretium. Maecenas rutrum accumsan eleifend. Nullam vel semper leo. Duis malesuada nunc vel dapibus ultrices. Praesent vel elit nec ligula tincidunt lobortis. Nunc tristique tortor magna, in maximus ipsum lobortis ac. Fusce fringilla nisi non sagittis accumsan. Aenean eu facilisis purus. Nam tempor ligula erat, sagittis imperdiet tellus pellentesque vitae."
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disciplina_titulo_ementa"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_titulo_local_e_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Local e dia da semana"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disciplina_texto_ementa"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_texto_local_e_dia"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Cidade Universitária - Quarta-feira"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplina_titulo_local_e_dia"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_titulo_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Categoria"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disciplina_texto_local_e_dia"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/disciplina_texto_categoria"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Prática | Núcleo Específico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplina_titulo_categoria"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/botao_matricular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplina_texto_categoria"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>